@model Customer_Relationship_Management_1._0.Models.User

<h1>Delete User</h1>

<p>Are you sure you want to delete this user?</p>

<form asp-action="DeleteConfirmed" asp-controller="Users" method="post">
    <input type="hidden" asp-for="UserId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-controller="Users">Cancel</a>
</form>
