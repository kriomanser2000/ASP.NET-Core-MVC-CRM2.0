@{
}

@model IEnumerable<Customer_Relationship_Management_1._0.Models.User>
<table>
    <thead>
        <tr>
            <th>Ім'я</th>
            <th>Країна</th>
            <th>Номер телефону</th>
            <th>Електронна пошта</th>
            <th>Схвалено</th>
            <th>Роль</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.Country</td>
                <td>@user.PhoneNumber</td>
                <td>@user.Email</td>
                <td>@user.IsApproved</td>
                <td>@user.Role</td>
            </tr>
        }
    </tbody>
</table>