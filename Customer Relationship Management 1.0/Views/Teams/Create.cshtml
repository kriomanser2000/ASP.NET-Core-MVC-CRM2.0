@model Customer_Relationship_Management_1._0.Models.Team

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Створити нову команду</title>
</head>
<body>
    <h1>Створити нову команду</h1>

    <form asp-action="Create" method="post">
        <div>
            <label asp-for="TeamName"></label>
            <input asp-for="TeamName" />
            <span asp-validation-for="TeamName" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Description"></label>
            <input asp-for="Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div>
            <button type="submit">Створити</button>
        </div>
    </form>

    <div>
        <a asp-action="Index">Повернутися до списку команд</a>
    </div>
</body>
</html>
